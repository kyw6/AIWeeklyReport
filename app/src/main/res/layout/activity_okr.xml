<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OKRActivity">

    <!-- Objective 标题 -->
    <TextView
        android:id="@+id/tvObjectiveTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Objective"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Objective 内容 -->
    <TextView
        android:id="@+id/tvObjectiveContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="提高产品用户满意度"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvObjectiveTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Key Results 标题 -->
    <TextView
        android:id="@+id/tvKeyResultsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Key Results"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvObjectiveContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Key Result 1 -->
    <TextView
        android:id="@+id/tvKeyResult1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. 用户满意度评分提高至8.5以上"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKeyResultsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Key Result 2 -->
    <TextView
        android:id="@+id/tvKeyResult2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. 每周新增用户数达到5000"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKeyResult1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Key Result 3 -->
    <TextView
        android:id="@+id/tvKeyResult3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3. 用户留存率提高至60%"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKeyResult2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
