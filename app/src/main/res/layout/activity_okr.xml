<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 加载动画 -->
    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <!-- OKR文本 -->
    <TextView
        android:id="@+id/okr_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OKRs: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@id/loading_progress_bar"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/krs_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KRs: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@id/okr_text_view"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/res_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Res: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@id/krs_text_view"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/error_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络请求错误"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/proposal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proposal: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@id/res_text_view"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
