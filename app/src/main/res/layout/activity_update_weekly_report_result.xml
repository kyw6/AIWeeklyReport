<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:src="@mipmap/img_1"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/jump_mind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/jump_mind"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/ib_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:src="@mipmap/img_2"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_head_show_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024年8月12-15日周报"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/rl_mind_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">


            <TextView
                android:id="@+id/scale_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:background="@drawable/percent_bg"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:visibility="gone"
                tools:text="100%">
            </TextView>
        </FrameLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_marginTop="560dp"
            android:background="#F0F0F0"
            android:gravity="top|start"
            android:hint="周报内容..."
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashed_line"
            app:layout_constraintVertical_bias="1.0" />
        <!-- Loading 页面 -->
        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="生成周报中..."
                android:textColor="@android:color/white" />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>